{
	"id": "views:media_showcase/media",
	"widget": "CRUD",
	"collection": "media",
	"views": {
		"create": "edit",
		"read": {
			"css": "col-sm-6",
			"widget": "Masonry",
			"child": {
				"template": "templates:media_showcase/media.html"
			}
		},
		"update": "edit",
		"edit": {
			"widget": "Form",
			"css": "container",
			"schema": {
				"title": { 
					"label": "Short Description",
					"comment": "Let's give your upload a name",
					"required": true
				},
				"description": { 
					"label": "Full Description",
					"editor": "TextArea",
					"required": false
				},
				"tags": { 
					"label": "Tags",
					"editor": "Tags",
					"required": true
				},
				"file": { 
					"label": "Media File",
					"comment": "Click to change",
					"collection": "uploads",
					"debug": true,
					"when": {
							"upload": "scripts:client/media/auto_title.js"
					},
					"editor": "Portrait"
				}
			}
		}
	}
}
